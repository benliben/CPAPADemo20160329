<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.yuanxiong.cpapademo2">


    <!--权限*****************************************************************-->
    <!--联网-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--wifi状态-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--权限*****************************************************************-->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity android:name=".ui.activity.MainActivity">

        </activity>
        <!--Recycle上拉加载界面-->
        <activity android:name=".ui.recycle.simple.SimpleActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--登录界面-->
        <activity android:name=".ui.activity.LoginActivity"></activity>
        <!--注册界面-->
        <activity android:name=".ui.activity.RegisterActivity"></activity>
        <!--忘记密码界面-->
        <activity android:name=".ui.activity.ForgetPasswordActivity"></activity>
        <!--收藏界面-->
        <activity android:name=".ui.activity.CollectActivity"></activity>
        <!--设置界面-->
        <activity android:name=".ui.activity.SetActivity"></activity>
    </application>

</manifest>